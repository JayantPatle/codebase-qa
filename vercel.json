{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://codebase-qa-ozcn.onrender.com/api/:path*" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
